{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "ES2015",
    "locale": "zh-CN",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017"
    ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}